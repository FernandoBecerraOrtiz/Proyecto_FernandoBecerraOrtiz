---
const teachers = Object.values(import.meta.glob('../content/teachers/*.md', { eager: true })).map((teacher, index) => ({
    title: teacher.frontmatter.title,
    image: teacher.frontmatter.image,
    description: teacher.frontmatter.description,
    alt: teacher.frontmatter.alt, 
    index
}));
---

<section class="max-w-7xl mx-auto my-15 px-4 py-12 bg-black/30 rounded-2xl">
    <h2 class="w-full text-center text-4xl font-bold mb-5">Conoce a nuestro equipo</h2>

    <div id="default-carousel" class="mx-auto relative" data-carousel="slide">
        <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
            {teachers.map(({ title, image, description, alt, index }) => (
                <div class={`duration-1200 ease-in-out ${index === 0 ? 'block' : 'hidden'}`} data-carousel-item>
                    <div class="flex justify-center items-center gap-3 h-full p-5 bg-blue-500/80">
                        <img src={image} class="rounded object-cover h-full" alt={alt} />
                        <div class="text-4xl font-bold text-white">
                            <h2>{title}</h2>
                            <h4 class="mt-10 text-xl tracking-wider">{description}</h4>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    
        <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
            {teachers.map(({ index }) => (
                <button type="button" class="w-3 h-3 rounded-full" aria-current={index === 0} aria-label={`Slide ${index + 1}`} data-carousel-slide-to={index}></button>
            ))}
        </div>
    
        <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                </svg>
                <span class="sr-only">Previous</span>
            </span>
        </button>
    
        <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                <span class="sr-only">Next</span>
            </span>
        </button>
    </div>    
</section>
